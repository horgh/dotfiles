! Find font names using this command: fc-list
! XPS 13
urxvt.font:	xft:inconsolata:pixelsize=40:antialias=true:hinting=true

URxvt.background: #eee9e9
URxvt.foreground: black

URxvt.scrollBar: False

URxvt.perl-ext-common: default,matcher

! alt-u to trigger url matches
URxvt.keysym.M-u: matcher:select

! alt-c is another good key to use for something

! alt-s is usually a scrollback search. I do not like it. It interferes with my
! irssi bindings for one thing. This undoes that binding.
URxvt.keysym.M-s: builtin:

URxvt.scrollTtyOutput: False
URxvt.scrollWithBuffer: False
URxvt.scrollTtyKeypress: True

! no scrollbar
URxvt*scrollBar_right: false
! whether we draw a border
URxvt*borderLess: false

! transparency off
URxvt*inheritPixmap: false

URxvt*geometry: 80x24

! XPS 13 is 276 dpi
Xft.dpi: 276
Xft.autohint: 0
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb
